{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "module": "esnext",
    "target": "es5",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src",
    "test"
  ]
}
